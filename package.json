{
  "name": "spectrogram",
  "displayName": "Spectrogram",
  "description": "Real-time spectrogram",
  "version": "2.0.0",
  "publisher": "lanly-dev",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Audio",
    "spectrogram",
    "mp3",
    "flac"
  ],
  "icon": "media/spec.png",
  "galleryBanner": {
    "color": "white",
    "theme": "light"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "spectrogram",
          "name": "Spectrogram",
          "icon": "media/icon.svg",
          "contextualTitle": "Spectrogram"
        }
      ]
    },
    "commands": [
      {
        "command": "spectrogram.revealInFileExplorer",
        "title": "Reveal in File Explorer"
      },
      {
        "command": "spectrogram.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "spectrogram.revealInFileExplorer",
          "when": "false"
        },
        {
          "command": "spectrogram.refresh",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "spectrogram.revealInFileExplorer",
          "when": "view == spectrogram",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "spectrogram.refresh",
          "when": "view == spectrogram",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "properties": {
        "spectrogram.rgbColor": {
          "type": "object",
          "default": {
            "r": 255,
            "g": 0,
            "b": 0
          },
          "description": "RGB color for the spectrogram",
          "properties": {
            "r": {
              "type": "number",
              "minimum": 0,
              "maximum": 255
            },
            "g": {
              "type": "number",
              "minimum": 0,
              "maximum": 255
            },
            "b": {
              "type": "number",
              "minimum": 0,
              "maximum": 255
            }
          }
        },
        "spectrogram.showDuration": {
          "type": "boolean",
          "default": true,
          "description": "Show audio's duration in the treeview"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "vsce-package": "vsce package",
    "package": "webpack --mode production --devtool hidden-source-map",
    "wp": "webpack",
    "wp-watch": "webpack --watch",
    "task-clean-output": "node tasks.js clean",
    "lint": "eslint .",
    "lint-sum": "eslint --format summary-chart .",
    "lint-fix": "eslint --fix ."
  },
  "dependencies": {
    "music-metadata": "^10.8.1"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "@types/vscode": "^1.96.0",
    "@types/vscode-webview": "^1.57.5",
    "@vscode/codicons": "^0.0.36",
    "@vscode/vsce": "^3.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "eslint": "^9.19.0",
    "eslint-formatter-summary-chart": "^0.3.0",
    "eslint-plugin-jsdoc": "^50.6.3",
    "pug": "^3.0.3",
    "shelljs": "^0.8.5",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lanly-dev/VSCode-Spectrogram.git"
  }
}
